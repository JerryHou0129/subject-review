<!--pages/comment/comment.wxml-->


<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">课程代码</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入课程代码" />
    </view>
  </view>

  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">所属大学</view>
    </view>
    <view class="weui-cell__bd">
      <picker class="select" bindchange="bindPickerChange" value="{{index}}" range="{{universities}}">
        <button type="default">请选择</button>
      </picker>
    </view>
  </view>



  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">学科名字</view>
    </view>
    <view class="weui-cell__bd">
      <picker class="select" bindchange="bindPickerChange" value="{{index}}" range="{{name}}">
        <button type="default">请选择</button>
      </picker>
    </view>
  </view>



</view>